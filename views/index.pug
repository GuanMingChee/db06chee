extends layout

block content
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/hauntedplaces") Take me to costumes
    br
    a(href="/logout") Logout
  
  <br>
  <br>
  div(id="target") Display!

  script.
    let client_count=0
    function update(){
      client_count++;
      document.getElementById("target").innerHTML="Value now "+ client_count
      console.log("Value now " + client_count)
    }

  p Link to new site below: 
    a(href='http://localhost:5000/hauntedplaces') Haunted Places


